{
  "manifest_version": 3,
  "name": "Coupang Network Filter",
  "version": "1.0.1",
  "description": "쿠팡 메인 페이지 광고/트래킹 차단",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
